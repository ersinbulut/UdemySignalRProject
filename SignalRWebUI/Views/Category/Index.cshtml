@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                           Kategori ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Adı</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Status</td>
                                            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger btn-border btn-round">Sil</a></td>
                                            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                           <a href="/Category/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>