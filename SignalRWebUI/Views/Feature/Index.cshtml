@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık 1</th>
                                        <th>Başlık 2</th>
                                        <th>Başlık 3</th>
                                        <th>Açıklama 1</th>
                                        <th>Açıklama 2</th>
                                        <th>Açıklama 3</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.FeatureID</th>
                                            <td>@item.Title1</td>
                                            <td>@item.Title2</td>
                                            <td>@item.Title3</td>
                                            <td>@item.Description1</td>
                                            <td>@item.Description2</td>
                                            <td>@item.Description3</td>
                                            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger btn-border btn-round">Sil</a></td>
                                            <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Feature/CreateFeature/" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>